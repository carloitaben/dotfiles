// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "snippet_sort_order": "top",
  "git_panel": {
    "button": false,
  },
  "file_scan_inclusions": [".env", ".env*"],
  "tab_bar": {
    "show_nav_history_buttons": false,
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "ui_font_family": "BlexMono Nerd Font",
  "buffer_font_family": "BlexMono Nerd Font",
  "ui_font_weight": 450,
  "buffer_font_weight": 450,
  "relative_line_numbers": "enabled",
  "theme": {
    "mode": "system",
    "light": "Vesper",
    "dark": "Vesper",
  },
  "terminal": {
    "cursor_shape": "bar",
    "dock": "right",
  },
  "project_panel": {
    "hide_root": true,
    "default_width": 300.0,
    "file_icons": false,
    "folder_icons": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
  },
  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "title_bar": {
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_picture": false,
  },
  "agent": {
    "dock": "left",
    "button": false,
  },
  "vim": {
    "use_system_clipboard": "on_yank",
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx", "tv", "clsx"],
      },
    },
  },
  "file_types": {
    "HTML": ["*.svg"],
  },
  "languages": {
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
  },
}
