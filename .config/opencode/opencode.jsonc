{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "vesper",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
  },
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
    },
    "git *": "ask",
  },
  "plugin": ["@mohak34/opencode-notifier@latest"],
}
